<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<BorderPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <HBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="200.0" prefWidth="500.0">
         <children>
            <VBox prefHeight="150.0" prefWidth="300.0">
               <children>
                  <Label fx:id="productName" prefHeight="100.0" prefWidth="300.0" text="ProductName" />
                  <TextArea fx:id="productDescription" prefHeight="200.0" prefWidth="200.0" text="Description" />
                  <HBox prefHeight="100.0">
                     <children>
                        <Label fx:id="price" prefHeight="90.0" prefWidth="150.0" text="Price">
                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                        </Label>
                        <HBox prefHeight="100.0" prefWidth="200.0">
                           <children>
                              <Button fx:id="minusButton" mnemonicParsing="false" prefHeight="25.0" prefWidth="25.0" text="-">
                                 <HBox.margin>
                                    <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                                 </HBox.margin>
                              </Button>
                              <Label fx:id="quantityOfProduct" prefHeight="25.0" prefWidth="46.0" text="Quantity">
                                 <HBox.margin>
                                    <Insets bottom="10.0" top="10.0" />
                                 </HBox.margin>
                              </Label>
                              <Button fx:id="plusButton" mnemonicParsing="false" prefHeight="25.0" prefWidth="25.0" text="+">
                                 <HBox.margin>
                                    <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                                 </HBox.margin>
                              </Button>
                           </children>
                        </HBox>
                     </children>
                  </HBox>
               </children>
            </VBox>
            <ImageView fx:id="productImage" fitHeight="200.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
         </children>
      </HBox>
   </center>
   <top>
      <Separator fx:id="topSeparator" prefWidth="200.0" BorderPane.alignment="CENTER" />
   </top>
   <bottom>
      <Separator fx:id="bottomSeparator" prefWidth="200.0" BorderPane.alignment="CENTER" />
   </bottom>
</BorderPane>
